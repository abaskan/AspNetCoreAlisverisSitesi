@model RegisterModel

<h1 class="h3 text-center">Üye Ol</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-controller="Account" asp-action="Register" method="POST">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="FirstName" class="col-form-label">Ad</label>
            <div>
                <input class="form-control form-control-sm" asp-for="FirstName">
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="LastName" class="col-form-label">Soyad</label>
            <div>
                <input class="form-control form-control-sm" asp-for="LastName">
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <!--
       <div class="form-group">
            <label asp-for="UserName" class="col-form-label">Kullanıcı Adı</label>
            <div>
                <input class="form-control form-control-sm" asp-for="UserName">
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>
        -->
        <div class="form-group">
            <label asp-for="Email" class="col-form-label">Email Adresi</label>
            <div>
                <input class="form-control form-control-sm" asp-for="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>   
         <div class="form-group">
            <label asp-for="Password" class="col-form-label">Şifre</label>
            <div>
                <input class="form-control form-control-sm" asp-for="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
                <small id="emailHelp" class="form-text text-muted">Şifreniz en az 6 karakter olmalıdır. En az 1 tane rakam ve en az 1 tane küçük harf içermelidir.</small>
            </div>
        </div>
        <!--
         <div class="form-group row">
            <label asp-for="RePassword" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="RePassword">
                <span asp-validation-for="RePassword" class="text-danger"></span>
            </div>
        </div>
        -->
         

        <div class="form-group">
            <div>
                <button type="submit" class="btn btn-success btn-block">Üye Ol</button>
            </div>
        </div>
    </form>
    </div>
</div>
@model LoginModel

<h1 class="h3 text-center">Giriş Yap</h1>

<div class="row justify-content-center">
    <div class="col-md-4">
        <div class="card bg-light">
            <div class="card-body">
                <form asp-controller="Account" asp-action="Login" method="POST">
                    <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl">
                    <div asp-validation-summary="All" class="text-danger"></div>      

                    <div class="form-group">
                        <label asp-for="Email" class="col-form-label">Email Adresi</label>
                        <div>
                            <input class="form-control form-control-sm" asp-for="Email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>   
                    <div class="form-group">
                        <div>
                            <label asp-for="Password" class="col-form-label">Şifre</label>
                            <a href="/account/forgotpassword" class="card-link offset-md-5">Şifremi Unuttum</a>
                        </div>

                        
                        <div>
                            <input class="form-control form-control-sm" asp-for="Password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div> 

                    <div class="form-group pt-3">
                            <button type="submit" class="btn btn-success btn-block btn-sm">Giriş Yap</button>
                    </div>
                
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row justify-content-center pt-3">
    <div class="col-md-4">
        <div class="card bg-light">
            <div class="card-body">
                Hesabın Yok Mu ? <a href="/account/register" class="card-link">Üye Ol</a>
            </div>
        </div>
    </div>
</div>
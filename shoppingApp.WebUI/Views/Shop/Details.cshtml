@model ProductDetailModel


<div class="card mb-3 mt-5">
    <div class="row no-gutters">
        <div class="col-md-4">
            <img class="card-img img-fluid my-2" src="~/images/@Model.Product.ImageUrl" alt="Ürün Fotoğrafı">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h4 class="card-title">@Model.Product.Name</h4>
                <h6 class="card-title">@Model.Product.Brand</h6>
                <div class="mb-3">
                    <h4 class="mb-3" style="display: inline;">Fiyat : </h4>
                    <h4 class="text-danger mb-3" style="display: inline;"> 
                        <i class="fas fa-lira-sign"></i> @Model.Product.Price
                    </h4>
                </div>

                <form asp-controller="Cart" asp-action="AddToCart" method="POST" class="form-inline">
                    <input type="hidden" name="productId" value="@Model.Product.ProductId">
                    <div class="input-group mb-3">
                        <input type="number" name="quantity" class="form-control" value="1" min="1" step="1" style="width: 5rem;">
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-success ml-3">
                                <i class="fas fa-cart-plus"></i>  Sepete Ekle                             
                            </button>
                        </div>
                    </div>
                </form>

                <div class="mt-5">
                    @Html.Raw(Model.Product.Description)
                </div>
            </div>
        </div>
    </div>
</div>



@model IEnumerable<IdentityRole>

<div class="row">
    <div class="col-md-12">
        <div class="d-flex justify-content-between">
            <h1 class="h3">Roller</h1>
            <a class="btn btn-success" href="/admin/role/create">Yeni Rol Oluştur</a>
        </div>
        
        <hr>

        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <td style="width: 250px;">Id</td>
                    <td>Rol Adı</td>
                    <td style="width: 160px;"></td>
                </tr>
            </thead>
            <tbody>
                @if(Model.Count()>0)
                {
                       @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>                              
                                <td>
                                    <a href="/admin/role/@item.Id" class="btn btn-primary btn-sm mr-2">Düzenle</a>
                                    
                                    <form action="/admin/role/delete" method="POST" style="display: inline;">
                                        <input type="hidden" name="RoleId" value="@item.Id">
                                        <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                                    </form>
                                </td>
                        </tr>
                        }
                }else{
                    <div class="alert alert-warning">
                        <h3>No Roles</h3>
                    </div>
                }

             
            </tbody>
        </table>
    </div>
</div>